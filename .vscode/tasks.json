{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$tsc"
    },
    {
      "type": "npm",
      "script": "build:watch",
      "isBackground": true,
      "problemMatcher": "$tsc-watch",
      "group": "build"
    },
    {
      "type": "npm",
      "script": "lint",
      "problemMatcher": "$eslint-stylish",
      "group": "test"
    }
  ]
}
